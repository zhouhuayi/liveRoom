/* table */ 
*{padding:0;margin:0;}
body{font-family:verdana;font-size:12px; overflow:auto;}
table{width:100%;border:1px solid #999;}
th,td{padding:6px 0;text-align:center;border:1px solid #999;}
th{background-color:#CCC;color:#ffffff;}
.operation{width:200px;}
.operation a{padding:0 6px;}
td a{padding:0 6px;}

/* page */
*{ margin:0; padding:0; list-style:none;}
a{ text-decoration:none;}
a:hover{ text-decoration:none;}
.tcdPageCode{color: #ccc;}
.tcdPageCode a{display: inline-block;color: #428bca;display: inline-block;height: 25px;	line-height: 25px;	padding: 0 10px;border: 1px solid #ddd;	margin: 0 2px;border-radius: 4px;vertical-align: middle;}
.tcdPageCode a:hover{text-decoration: none;border: 1px solid #428bca;}
.tcdPageCode span.current{display: inline-block;height: 25px;line-height: 25px;padding: 0 10px;margin: 0 2px;color: #fff;background-color: #428bca;	border: 1px solid #428bca;border-radius: 4px;vertical-align: middle;}
.tcdPageCode span.disabled{	display: inline-block;height: 25px;line-height: 25px;padding: 0 10px;margin: 0 2px;	color: #bfbfbf;background: #f2f2f2;border: 1px solid #bfbfbf;border-radius: 4px;vertical-align: middle;}

/* 弹窗 */
i{ font-style:normal;}
/*房间详情数据的*/
#details{position:absolute;width:637px;min-height:457px;_height:457px;border:1px solid #ccc;background:#efefef; display:none;}
#details .tit{ background:#ddd; display:block; height:33px; cursor:move;}
#details .tit i{ float:right; line-height:33px; padding:0 8px;cursor:default;}
#details .tit span{ float:left; line-height:33px; padding:0 8px;cursor:default;}
/*修改的弹窗*/
#detailsup{position:absolute;width:637px;min-height:300px;_height:457px;border:1px solid #ccc;background:#efefef; display:none;}
#detailsup .tit{ background:#ddd; display:block; height:33px; cursor:move;}
#detailsup .tit i{ float:right; line-height:33px; padding:0 8px;cursor:default;}
#detailsup .tit span{ float:left; line-height:33px; padding:0 8px;cursor:default;}