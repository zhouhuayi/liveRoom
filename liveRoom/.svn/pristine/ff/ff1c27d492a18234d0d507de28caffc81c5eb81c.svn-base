.emotion  { float: left; width: 100%; border-style: none; height: 98%; background-color:rgba(255, 255, 255, 0.01); font-family: "微软雅黑"; font-size: 12px; color: #000; }
.fweor-2 { float: right; width: 14%; text-align: right; padding-right: 10px; position: relative; }
